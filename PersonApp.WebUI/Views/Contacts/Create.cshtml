@model PersonApp.Entities.Contact

@{
    ViewData["Title"] = "İletişim Bilgisi Ekle";
}

<h1>İletişim Bilgisi Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PersonId" type="hidden" value="@ViewBag.PersonId" />
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoType" class="control-label"></label>
                <select asp-for="InfoType" class="form-control" asp-items="Html.GetEnumSelectList<PersonApp.Entities.InfoType>()"></select>
                <span asp-validation-for="InfoType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @TempData["Message"]
</div>
<div>
    <a asp-action="Index" asp-route-id="@ViewBag.PersonId">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
